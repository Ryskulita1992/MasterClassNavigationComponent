<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/mainFragment">

    <fragment
        android:id="@+id/exampleFragment"
        android:name="kg.geektech.masterclassnavigationcomponent.ui.ExampleFragment"
        android:label="fragment_example"
        tools:layout="@layout/fragment_example" />

    <fragment
        android:id="@+id/mainFragment"
        android:name="kg.geektech.masterclassnavigationcomponent.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_exampleFragment"
            app:destination="@id/exampleFragment" />
    </fragment>


</navigation>